{
  "name": "Movie_sap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9.1.0",
    "@sap/cds-dk": "^9.0.5",
    "@sap/xssec": "^4",
    "express": "^4",
    "mbt": "latest"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@sap/cds-dk": ">=8"
  },
  "scripts": {
    "start": "cds-serve",
    "build hana": "cds build --for hana",
    "hybrid": "cds watch --profile hybrid",
    "dev": "cds watch --profile development",
    "update_uua": "cf update-service Movie_sap-uaa -c xs-security.json",
    "auth_app_router": "cds bind --exec -- npm start --prefix app/router",
    "srv2xsuua": "cds compile srv/ --to xsuaa > xs-security.json",
    "mta_build": "mbt build --mtar Movie_sap-mta",
    "deploy": "cf deploy mta_archives/Movie_sap-mta.mtar",
    "watch-movies": "cds watch --open movies/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      },
      "[hybrid]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/movies"
  ]
}
